<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="xmlJdbcConnection" class="com.khg.learningspring.xml.XmlJdbcConnection">
    </bean>

    <bean id="xmlPersonDao" class="com.khg.learningspring.xml.XmlPersonDao">
        <property name="xmlJdbcConnection" ref="xmlJdbcConnection"/> <!-- Auto Wired to Beans -->
    </bean>

</beans>